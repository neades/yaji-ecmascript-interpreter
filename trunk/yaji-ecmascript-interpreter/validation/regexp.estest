writeln ("// " + document.URL);
writeln ("// " + Date());
writeln ("// Test regular expressions");
writeln ("// Regular expression package loaded: " + RegExp);
writeln();

// @test regexp
r = new RegExp("a(.?)b");
// r.toString() == "/abc/";

@test test.1
r.test("xabc");

@test test.2
!r.test("XABC");


@test test.3
r.ignoreCase=true;
r.test("XABC");

@test ignoreCase
r.ignoreCase

@test search.1
("XADBC").search(r)==1;

@test search.2
r.ignoreCase=false;
("XADBC").search(r)==-1;

@test match.1
a=("bbaabb").match(r)
a=="aab,a"

@test index.1
a.index==2;

@test input.1
a.input.toString()=="bbaabb"

@test exec.1
a=r.exec("bbaabb")
a=="aab,a"

@test nullgroup.1
urlPattern = new RegExp( "\\w+://([\\w.]+)(:\\d+)?/[^\\s\"']+/?" );
s = '<A HREF="http://profile.mitre.org:80/JRun/">JRun Logs</A><BR>';
result = urlPattern.exec(s);
result[0]=="http://profile.mitre.org:80/JRun/";

@test nullgroup.2
s = '<A HREF="http://profile.mitre.org/JRun/">JRun Logs</A><BR>';
result = urlPattern.exec(s);
result[0]=="http://profile.mitre.org/JRun/";
